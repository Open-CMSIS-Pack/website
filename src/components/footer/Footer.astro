---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import Icon from "astro-icon";
import LinaroLogo from "../../assets/images/linaro-logo-white.svg";
const footer = await getEntry("data", "footer");
const { data }: any = footer;
---

<footer class="justify-self-end mt-auto bg-[#575757] text-white pt-8 px-2">
  <div class="flex flex-wrap flex-row items-center justify-center gap-4">
    <a
      href="https://github.com/Linaro/linaro-astro-template"
      class="flex gap-2 hover:underline"
    >
      <Icon name="mdi:github" class="w-6 text-inherit" />View on GitHub
    </a>
  </div>
  <ul class="flex flex-wrap flex-row items-center justify-center gap-4 my-6">
    <span class="text-center"> Copyright © 2022 Linaro Limited</span>
    {
      data.company_links.map((link: any) => (
        <li>
          <a
            href={link.url}
            class="before:content-['•'] before:mr-4 text-white"
          >
            <span class="hover:underline">{link.label}</span>
          </a>
        </li>
      ))
    }
  </ul>

  <div class="flex flex-row justify-center my-4">
    <a href="/">
      <Image class="w-[60px]" src={LinaroLogo} alt="logo" />
    </a>
  </div>
</footer>
