---
import { Image, getImage } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"pages">["data"]["hero"];

const { title, description, background_image, style } = Astro.props!;
---

<div class="h-full mb-4">
  <div
    class:list={[
      style,
      "hero-background",
      "flex  flex-col items-center text-white justify-center  h-[350px] w-full",
    ]}
  >
    <h1 class="text-inherit text-3xl lg:text-5xl text-left">{title}</h1>
    {description && <p class="mt-0 mb-5">{description}</p>}
  </div>
</div>
<style
  define:vars={{
    backgroundUrl: background_image
      ? `url(${background_image.src})`
      : "#212529",
  }}
>
  .hero-background {
    background-image: var(--backgroundUrl);
    background-position: center;
    object-fit: cover;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
    z-index: 1;
  }
  .hero-background::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgb(0 0 0 / 93%);
    color: #fff;
    z-index: -1;
    height: 350px;
  }
</style>
